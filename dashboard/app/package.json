{
  "name": "app",
  "version": "0.1.0",
  "description": "VRADA Dashboard",
  "author": "Lefteris Chatziefraimidis",
  "private": true,
  "main": "./main.js",
  "homepage": "./",
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "file-loader": "^6.1.1",
    "npm-run-all": "^4.1.5",
    "query-string": "^6.13.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "3.4.4",
    "wifi-control": "^2.0.1"
  },
  "scripts": {
    "app:prod": "NODE_ENV=production webpack --config config/webpack.prod.js",
    "app:dev": "webpack serve --hot --mode development --config config/webpack.dev.js",
    "electron:dev": "electron .",
    "start": "NODE_ENV=production npm-run-all -s app:prod electron:dev",
    "dev": "NODE_ENV=development npm-run-all -p electron:dev app:dev",
    "build:win":"electron-builder build --win",
    "build:mac":"electron-builder build --mac",
    "build:linux":"electron-builder build --linux",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "babel-loader": "^8.1.0",
    "babel-plugin-import": "^1.13.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^5.0.0",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "eslint": "^7.11.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "^4.5.0",
    "less": "^3.12.2",
    "less-loader": "^7.0.2",
    "less-vars-to-js": "^1.3.0",
    "path": "^0.12.7",
    "style-loader": "^2.0.0",
    "webpack": "^5.2.0",
    "webpack-cli": "^4.1.0",
    "webpack-dev-server": "^3.11.0"
  },
  "build": {
    "appId": "vrada-dashboard",
    "productName":"VRADA-Dashboard",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "utils/**/*",
      "icons/**/*",
      "main.js"
    ],
    "extraMetadata":{
      "main":"main.js"
    },
    "mac":{
      "icon":"icons/icon.png"
    },
    "win":{
      "icon":"icons/icon.png"
    },
    "linux":{
      "icon":"icons/icon.png"
    }
  }
}
